<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/city_overview_root"
    android:layout_height="match_parent"
    android:background="@drawable/tpty"
    tools:context="com.tomato.curry.CityOverview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/ivback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_back_white_36dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:layout_marginTop="10dp"

            />
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:src="@drawable/app_logo"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/city_title_desc"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="TIRUPATHI"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/city_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#afafaf"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comingsooon_layout"
        android:orientation="vertical"
        android:layout_below="@+id/city_title_desc"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        >
    <TextView
        android:id="@+id/comingsooon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:textSize="24dp"
        android:text="Coming Soon"
        />
</LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/men_women_selection"
        android:layout_below="@+id/city_title_desc"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/tvhola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:textSize="24dp"
            android:text="Hola! I am a"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="60dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/men"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/male"
                    />
                <TextView
                    android:id="@+id/tvmen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Men"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/women"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/female"
                    />
                <TextView
                    android:id="@+id/tvwomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:text="Women"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
